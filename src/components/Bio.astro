---
import { SITE_AUTHOR } from '../consts';
import ProfileImage from '../assets/my_photo.jpeg';
---

<div class="bio">
  <img 
    src={ProfileImage.src} 
    alt="Profile" 
    class="bio-avatar"
  />
  <p>
    <strong>{SITE_AUTHOR.name}</strong> {SITE_AUTHOR.summary}
  </p>
</div>

<style>
  .bio {
    display: flex;
    margin-bottom: var(--spacing-16);
    align-items: center;
  }

  .bio p {
    margin-bottom: var(--spacing-0);
    line-height: var(--lineHeight-relaxed);
  }

  .bio-avatar {
    margin-right: var(--spacing-4);
    margin-bottom: var(--spacing-0);
    min-width: 50px;
    width: 50px;
    height: 50px;
    border-radius: 100%;
    object-fit: cover;
  }
</style>
