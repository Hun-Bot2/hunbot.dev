<!-- GoatCounter Analytics -->
<script data-goatcounter="https://hunbot.goatcounter.com/count"
        async src="//gc.zgo.at/count.js"></script>

<!-- 전역 테마 관리 스크립트 (모든 페이지에서 작동) -->
<script is:inline>
	const THEME_STORAGE_KEY = 'neural-blog-theme';
	const prefersDarkQuery = window.matchMedia('(prefers-color-scheme: dark)');
	let themeBtn = null;

	function applyTheme(theme) {
		const isDark = theme === 'dark';
		const body = document.body;

		if (body) {
			body.classList.remove('dark-theme', 'light-theme');
			body.classList.add(isDark ? 'dark-theme' : 'light-theme');
		}

		if (document.documentElement) {
			document.documentElement.classList.toggle('dark', isDark);
		}

		if (themeBtn) {
			themeBtn.setAttribute('data-theme', theme);
			themeBtn.setAttribute('aria-pressed', isDark ? 'true' : 'false');
		}
	}

	function resolveInitialTheme(saved) {
		if (saved === 'dark' || saved === 'light') return saved;
		return prefersDarkQuery.matches ? 'dark' : 'light';
	}

	document.addEventListener('DOMContentLoaded', () => {
		try {
			themeBtn = document.getElementById('themeToggleBtn');
			const savedTheme = sessionStorage.getItem(THEME_STORAGE_KEY);
			const initialTheme = resolveInitialTheme(savedTheme);
			applyTheme(initialTheme);

			if (themeBtn && !themeBtn.hasAttribute('data-listener-added')) {
				themeBtn.setAttribute('data-listener-added', 'true');
				themeBtn.addEventListener('click', () => {
					const current = themeBtn?.getAttribute('data-theme') === 'dark' ? 'dark' : 'light';
					const next = current === 'dark' ? 'light' : 'dark';
					applyTheme(next);
					sessionStorage.setItem(THEME_STORAGE_KEY, next);
				});
			}

			const mediaHandler = (event) => {
				if (!sessionStorage.getItem(THEME_STORAGE_KEY)) {
					applyTheme(event.matches ? 'dark' : 'light');
				}
			};

			if (prefersDarkQuery.addEventListener) {
				prefersDarkQuery.addEventListener('change', mediaHandler);
			} else if (prefersDarkQuery.addListener) {
				prefersDarkQuery.addListener(mediaHandler);
			}
		} catch (err) {
			console.warn('Theme initialization error:', err);
		}
	});

	(function() {
		try {
			const savedTheme = sessionStorage.getItem(THEME_STORAGE_KEY);
			const initialTheme = resolveInitialTheme(savedTheme);
			document.documentElement.classList.toggle('dark', initialTheme === 'dark');
		} catch (err) {
			console.warn('Theme initialization pre-run error:', err);
		}
	})();
</script>
