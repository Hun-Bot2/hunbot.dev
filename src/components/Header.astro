---
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';
import LanguagePicker from './LanguagePicker.astro';
import { getLangFromUrl } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const homeUrl = lang === 'ko' ? '/' : `/${lang}/`;
const blogUrl = lang === 'ko' ? '/ko/blog' : `/${lang}/blog`;
---

<header class="header-wrapper">
	<div class="header-content">
		<h1 class="site-title">
			<a href={homeUrl} class="no-underline">{SITE_TITLE}</a>
		</h1>
		
		<div class="header-icons">
			<!-- Language Picker -->
			<LanguagePicker />
			
			<!-- Theme Toggle -->
			<button id="themeToggleBtn" class="icon-button" title="Toggle Dark Mode">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
					<path id="sunIcon" d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l1.59-1.591a.75.75 0 00-1.061-1.06l-1.59 1.591z"/>
					<path id="moonIcon" class="hidden" d="M9.528 1.718a.75.75 0 01.162.819A8.97 8.97 0 009 6a9 9 0 009 9 8.97 8.97 0 003.463-.69.75.75 0 01.981.98 10.503 10.503 0 01-9.694 6.46c-5.799 0-10.5-4.701-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 01.818.162z"/>
				</svg>
			</button>
			
			<!-- GitHub Link -->
			<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="icon-button" title="GitHub">
				<svg viewBox="0 0 16 16" width="20" height="20" fill="currentColor" aria-hidden="true">
					<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
				</svg>
			</a>
			
			<!-- LinkedIn Link -->
			<a href="https://linkedin.com/in/hunbot-dev" target="_blank" rel="noopener noreferrer" class="icon-button" title="LinkedIn">
				<svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor" aria-hidden="true">
					<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
				</svg>
			</a>
			
			<!-- Blog/Tags Icon -->
			<a href={blogUrl} class="icon-button" title="Blog">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"/>
					<line x1="7" y1="7" x2="7.01" y2="7"/>
				</svg>
			</a>
			
			<!-- RSS Icon -->
			<a href="/rss.xml" class="icon-button" title="RSS Feed">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M4 11a9 9 0 0 1 9 9"/>
					<path d="M4 4a16 16 0 0 1 16 16"/>
					<circle cx="5" cy="19" r="1"/>
				</svg>
			</a>
			
			<!-- Search Icon -->
			<button class="icon-button" title="Search">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<circle cx="11" cy="11" r="8"/>
					<path d="m21 21-4.35-4.35"/>
				</svg>
			</button>
			
			<!-- Menu/Hamburger Icon -->
			<button class="icon-button" id="menuToggle" title="Menu">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<line x1="3" y1="12" x2="21" y2="12"/>
					<line x1="3" y1="6" x2="21" y2="6"/>
					<line x1="3" y1="18" x2="21" y2="18"/>
				</svg>
			</button>
		</div>
	</div>
</header>


<style>
	.header-wrapper {
		position: sticky;
		top: 0;
		z-index: 100;
		width: 100%;
		background: rgb(40, 40, 40);
		border-bottom: 1px solid rgba(248, 249, 250, 0.1);
		padding: 0.75rem 0;
		backdrop-filter: saturate(120%) blur(8px);
		-webkit-backdrop-filter: saturate(120%) blur(8px);
	}
	
	.header-content {
		width: 100%;
		margin: 0;
		padding: 0 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		min-height: 3.5rem;
	}

	@media (min-width: 640px) {
		.header-content {
			padding: 0 3rem;
		}
	}

	@media (min-width: 1024px) {
		.header-content {
			padding: 0 4rem;
		}
	}
	
	.site-title {
		margin: 0;
		font-size: 1.5rem;
		font-weight: bold;
		font-family: var(--font-heading);
	}
	
	.site-title a {
		color: rgb(248, 249, 250);
		text-decoration: none;
	}
	
	.site-title a:hover {
		color: rgba(248, 249, 250, 0.8);
	}
	
	.header-icons {
		display: flex;
		gap: 0.75rem;
		align-items: center;
	}
	
	.icon-button {
		background: transparent;
		border: none;
		color: rgba(248, 249, 250, 0.7);
		cursor: pointer;
		padding: 0.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: color 0.2s;
		text-decoration: none;
	}
	
	.icon-button:hover {
		color: rgb(248, 249, 250);
	}
	
	.hidden {
		display: none;
	}
</style>
