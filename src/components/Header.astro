---
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const homeUrl = lang === 'ko' ? '/' : `/${lang}/`;
const blogUrl = lang === 'ko' ? '/ko/blog' : `/${lang}/blog`;
const tagsUrl = lang === 'ko' ? '/ko/blog/tags' : `/${lang}/blog/tags`;
const aboutUrl = lang === 'ko' ? '/ko/about' : `/${lang}/about`;
---

<header class="header-wrapper">
	<div class="header-content">
		<h1 class="site-title">
			<a href={homeUrl} class="no-underline">{SITE_TITLE}</a>
		</h1>
		<nav class="desktop-nav" aria-label="Primary">
			<a href={blogUrl} class="desktop-nav-link">
				<span class="nav-icon">
					<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M12 6.253V5c0-.828-.895-1.5-2-1.5H4.5A1.5 1.5 0 0 0 3 5v13a1.5 1.5 0 0 0 1.5 1.5H10c1.105 0 2 .672 2 1.5" />
						<path d="M12 6.253c0-.828.895-1.5 2-1.5h5.5A1.5 1.5 0 0 1 21 6.253v13a1.5 1.5 0 0 1-1.5 1.5H14c-1.105 0-2 .672-2 1.5" />
					</svg>
				</span>
				<span>{t('nav.blog')}</span>
			</a>
			<a href={tagsUrl} class="desktop-nav-link">
				<span class="nav-icon">
					<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M21 11.5L12.5 3H4v8.5L12.5 20a2 2 0 0 0 2.83 0L21 14.33a2 2 0 0 0 0-2.83z"/>
						<path d="M7 7h.01" />
					</svg>
				</span>
				<span>{t('nav.tags')}</span>
			</a>
			<a href={aboutUrl} class="desktop-nav-link">
				<span class="nav-icon">
					<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<circle cx="12" cy="8" r="4"/>
						<path d="M6 21v-2a4 4 0 0 1 4-4h4a4 4 0 0 1 4 4v2"/>
					</svg>
				</span>
				<span>{t('nav.about')}</span>
			</a>
		</nav>
		
		<div class="header-icons">
			<!-- Theme Toggle (always visible) -->
				<button id="themeToggleBtn" class="icon-button theme-toggle" title="Toggle Dark Mode" aria-label="Toggle Dark Mode" aria-pressed="true">
					<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
						<path id="sunIcon" d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l1.59-1.591a.75.75 0 00-1.061-1.06l-1.59 1.591z"/>
						<path id="moonIcon" d="M9.528 1.718a.75.75 0 01.162.819A8.97 8.97 0 009 6a9 9 0 009 9 8.97 8.97 0 003.463-.69.75.75 0 01.981.98 10.503 10.503 0 01-9.694 6.46c-5.799 0-10.5-4.701-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 01.818.162z"/>
					</svg>
				</button>

			<!-- Desktop Icons (hidden on mobile) -->
			<div class="desktop-icons">
				<!-- GitHub Link -->
				<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="icon-button" title="GitHub">
					<svg viewBox="0 0 16 16" width="20" height="20" fill="currentColor" aria-hidden="true">
						<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
					</svg>
				</a>
				
				<!-- LinkedIn Link -->
				<a href="https://linkedin.com/in/hunbot-dev" target="_blank" rel="noopener noreferrer" class="icon-button" title="LinkedIn">
					<svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor" aria-hidden="true">
						<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
					</svg>
				</a>
				
				<!-- RSS Icon -->
				<a href="/rss.xml" class="icon-button" title="RSS Feed">
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M4 11a9 9 0 0 1 9 9"/>
						<path d="M4 4a16 16 0 0 1 16 16"/>
						<circle cx="5" cy="19" r="1"/>
					</svg>
				</a>
					
					<!-- Search Icon -->
					<button class="icon-button search-button" title="Search" aria-label="검색 열기">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<circle cx="11" cy="11" r="8"/>
							<path d="m21 21-4.35-4.35"/>
						</svg>
					</button>
				</div>
			
			<!-- Menu/Hamburger Icon (visible on mobile) -->
			<button class="icon-button mobile-menu-btn" id="menuToggle" title="Menu">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<line x1="3" y1="12" x2="21" y2="12"/>
					<line x1="3" y1="6" x2="21" y2="6"/>
					<line x1="3" y1="18" x2="21" y2="18"/>
				</svg>
			</button>
		</div>
	</div>
	
	<!-- Mobile Menu -->
	<div id="mobileMenu" class="mobile-menu hidden">
		<nav class="mobile-nav">
			<a href={homeUrl} class="mobile-nav-item">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
					<polyline points="9 22 9 12 15 12 15 22"/>
				</svg>
				<span>{t('nav.home')}</span>
			</a>
			<a href={blogUrl} class="mobile-nav-item">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M12 6.253V5c0-.828-.895-1.5-2-1.5H4.5A1.5 1.5 0 0 0 3 5v13a1.5 1.5 0 0 0 1.5 1.5H10c1.105 0 2 .672 2 1.5" />
					<path d="M12 6.253c0-.828.895-1.5 2-1.5h5.5A1.5 1.5 0 0 1 21 6.253v13a1.5 1.5 0 0 1-1.5 1.5H14c-1.105 0-2 .672-2 1.5" />
				</svg>
				<span>{t('nav.blog')}</span>
			</a>
			<a href={tagsUrl} class="mobile-nav-item">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M21 11.5L12.5 3H4v8.5L12.5 20a2 2 0 0 0 2.83 0L21 14.33a2 2 0 0 0 0-2.83z"/>
					<path d="M7 7h.01" />
				</svg>
				<span>{t('nav.tags')}</span>
			</a>
			<a href={aboutUrl} class="mobile-nav-item">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<circle cx="12" cy="12" r="10"/>
					<line x1="12" y1="16" x2="12" y2="12"/>
					<line x1="12" y1="8" x2="12.01" y2="8"/>
				</svg>
				<span>{t('nav.about')}</span>
			</a>
			<a href="/rss.xml" class="mobile-nav-item">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M4 11a9 9 0 0 1 9 9"/>
					<path d="M4 4a16 16 0 0 1 16 16"/>
					<circle cx="5" cy="19" r="1"/>
				</svg>
				<span>RSS</span>
			</a>
			<div class="mobile-nav-divider"></div>
			<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="mobile-nav-item">
				<svg viewBox="0 0 16 16" width="20" height="20" fill="currentColor">
					<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
				</svg>
				<span>GitHub</span>
			</a>
			<a href="https://linkedin.com/in/hunbot-dev" target="_blank" rel="noopener noreferrer" class="mobile-nav-item">
				<svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
					<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
				</svg>
				<span>LinkedIn</span>
			</a>
		</nav>
	</div>
</header>

<script>
	// Mobile menu toggle
	const menuToggle = document.getElementById('menuToggle');
	const mobileMenu = document.getElementById('mobileMenu');
	
	if (menuToggle && mobileMenu) {
		menuToggle.addEventListener('click', () => {
			mobileMenu.classList.toggle('hidden');
		});
		
		// Close menu when clicking outside
		document.addEventListener('click', (e) => {
			const target = e.target as Node;
			if (!menuToggle.contains(target) && !mobileMenu.contains(target)) {
				mobileMenu.classList.add('hidden');
			}
		});
	}
</script>

<style>
	.header-wrapper {
		position: sticky;
		top: 0;
		z-index: 100;
		width: 100%;
		background: rgb(40, 40, 40);
		border-bottom: 1px solid rgba(248, 249, 250, 0.1);
		padding: 0.75rem 0;
		backdrop-filter: saturate(120%) blur(8px);
		-webkit-backdrop-filter: saturate(120%) blur(8px);
	}
	
	.header-content {
		width: 100%;
		margin: 0;
		padding: 0 1rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		min-height: 3.5rem;
		gap: 1rem;
	}

	@media (min-width: 640px) {
		.header-content {
			padding: 0 3rem;
		}
	}

	@media (min-width: 1024px) {
		.header-content {
			padding: 0 4rem;
		}
	}
	
	.site-title {
		margin: 0;
		font-size: 1rem;
		font-weight: bold;
		font-family: var(--font-heading);
		flex-shrink: 1;
		min-width: 0;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}

	@media (min-width: 640px) {
		.site-title {
			font-size: 1.25rem;
			white-space: normal;
		}
	}

	@media (min-width: 768px) {
		.site-title {
			font-size: 1.5rem;
		}
	}
	
	.site-title a {
		color: rgb(248, 249, 250);
		text-decoration: none;
	}
	
	.site-title a:hover {
		color: rgba(248, 249, 250, 0.8);
	}
	
	.header-icons {
		display: flex;
		gap: 0.5rem;
		align-items: center;
		flex-shrink: 0;
	}

	@media (min-width: 640px) {
		.header-icons {
			gap: 0.75rem;
		}
	}

	/* Desktop icons - hidden on mobile */
	.desktop-icons {
		display: none;
		gap: 0.75rem;
		align-items: center;
	}

	@media (min-width: 768px) {
		.desktop-icons {
			display: flex;
		}
	}

	/* Mobile menu button - visible on mobile, hidden on desktop */
	.mobile-menu-btn {
		display: flex;
	}

	@media (min-width: 768px) {
		.mobile-menu-btn {
			display: none;
		}
	}
	
	.icon-button {
		background: rgba(248, 249, 250, 0.06);
		border: 1px solid rgba(248, 249, 250, 0.15);
		border-radius: 999px;
		color: rgba(248, 249, 250, 0.82);
		cursor: pointer;
		padding: 0.45rem;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: color 0.2s, background 0.2s, border-color 0.2s;
		text-decoration: none;
	}
	
	.icon-button:hover {
		color: rgb(248, 249, 250);
		background: rgba(249, 115, 22, 0.2);
		border-color: rgba(249, 115, 22, 0.5);
	}

	.icon-button:focus-visible {
		outline: 2px solid rgba(249, 115, 22, 0.8);
		outline-offset: 2px;
	}

	.theme-toggle {
		margin-right: 0.25rem;
	}

	@media (min-width: 768px) {
		.theme-toggle {
			margin-right: 0.5rem;
		}
	}

	.theme-toggle svg {
		width: 22px;
		height: 22px;
		pointer-events: none;
	}

	.desktop-nav {
		display: none;
		gap: 0.75rem;
		margin-left: auto;
		align-items: center;
		background: rgba(15, 23, 42, 0.35);
		border: 1px solid rgba(248, 249, 250, 0.12);
		padding: 0.2rem 0.5rem;
		border-radius: 999px;
	}

	.desktop-nav-link {
		display: flex;
		align-items: center;
		gap: 0.35rem;
		color: rgba(248, 249, 250, 0.85);
		text-decoration: none;
		font-weight: 600;
		font-size: 0.9rem;
		padding: 0.25rem 0.6rem;
		border-radius: 999px;
		transition: color 0.2s ease, background 0.2s ease, transform 0.2s ease;
	}

	.desktop-nav-link:hover {
		color: rgb(249, 115, 22);
		background: rgba(249, 115, 22, 0.12);
		transform: translateY(-1px);
	}

	@media (min-width: 768px) {
		.desktop-nav {
			display: flex;
		}
	}

	#sunIcon,
	#moonIcon {
		transition: opacity 0.2s ease;
	}

	#sunIcon {
		fill: #facc15;
		stroke: #facc15;
		opacity: 1;
	}

	#moonIcon {
		fill: none;
		stroke: #f8fafc;
		opacity: 0;
	}

	body.dark-theme #sunIcon {
		opacity: 0;
	}

	body.dark-theme #moonIcon {
		opacity: 1;
		stroke: #f8fafc;
	}

	body.light-theme #sunIcon {
		opacity: 1;
		stroke: #ea580c;
		fill: #fcd34d;
	}

	body.light-theme #moonIcon {
		opacity: 0;
		stroke: #0f172a;
	}

	.nav-icon {
		display: inline-flex;
		align-items: center;
		justify-content: center;
	}

	.nav-icon svg {
		width: 18px;
		height: 18px;
	}

	/* Mobile Menu */
	.mobile-menu {
		position: absolute;
		top: 100%;
		left: 0;
		right: 0;
		background: rgba(40, 40, 40, 0.98);
		border-bottom: 1px solid rgba(248, 249, 250, 0.1);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
	}

	.mobile-menu.hidden {
		display: none;
	}

	.mobile-nav {
		padding: 1rem;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.mobile-nav-item {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 0.75rem 1rem;
		color: rgba(248, 249, 250, 0.8);
		text-decoration: none;
		border-radius: 0.5rem;
		transition: all 0.2s ease;
		font-size: 1rem;
	}

	.mobile-nav-item:hover {
		background: rgba(249, 115, 22, 0.2);
		color: rgb(248, 249, 250);
	}

	.mobile-nav-divider {
		height: 1px;
		background: rgba(248, 249, 250, 0.1);
		margin: 0.5rem 0;
	}
	
	.hidden {
		display: none;
	}
</style>
