---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-0 z-50 bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800 shadow-sm">
	<nav class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
		<!-- Logo/Title - Simplified -->
		<div class="flex items-center">
			<h1 class="text-lg font-bold text-slate-900 dark:text-white tracking-tight">
				<a href="/" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">
					{SITE_TITLE}
				</a>
			</h1>
		</div>
		
		<!-- Main Navigation - Simplified -->
		<div class="hidden md:flex items-center gap-8">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		
		<!-- Actions - Simplified -->
		<div class="flex items-center gap-3">
			<!-- GitHub 링크 -->
			<a 
				href="https://github.com/Hun-Bot2" 
				target="_blank" 
				title="GitHub Repository" 
				class="p-2 text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-all duration-200"
			>
				<svg viewBox="0 0 16 16" class="w-5 h-5" fill="currentColor">
					<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
				</svg>
			</a>
			
			<!-- Theme Toggle - Simplified -->
			<button 
				id="themeToggleBtn" 
				title="Toggle Dark Mode"
				class="relative p-2 text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-all duration-200"
			>
				<div class="relative w-[18px] h-[18px]">
					<svg id="sunIcon" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="absolute top-0 left-0 transition-opacity duration-300">
						<path d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l1.59-1.591a.75.75 0 00-1.061-1.06l-1.59 1.591z"/>
					</svg>
					<svg id="moonIcon" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="absolute top-0 left-0 transition-opacity duration-300 opacity-0">
						<path d="M9.528 1.718a.75.75 0 01.162.819A8.97 8.97 0 009 6a9 9 0 009 9 8.97 8.97 0 003.463-.69.75.75 0 01.981.98 10.503 10.503 0 01-9.694 6.46c-5.799 0-10.5-4.701-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 01.818.162z"/>
					</svg>
				</div>
			</button>
			
			<!-- 모바일 메뉴 버튼 -->
			<button 
				id="mobileMenuBtn"
				class="md:hidden p-2.5 text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-100 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-xl transition-all duration-200"
			>
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>
	</nav>
	
	<!-- 모바일 메뉴 - Scientific Style -->
	<div id="mobileMenu" class="hidden md:hidden border-t border-slate-200/60 dark:border-slate-700/60 bg-white/98 dark:bg-slate-950/98 backdrop-blur-xl">
		<div class="px-6 py-6 space-y-2">
			<HeaderLink href="/" class="block">Home</HeaderLink>
			<HeaderLink href="/blog" class="block">Blog</HeaderLink>
			<HeaderLink href="/blog/ai" class="block">AI</HeaderLink>
			<HeaderLink href="/blog/devlog" class="block">Devlog</HeaderLink>
			<HeaderLink href="/blog/review" class="block">Review</HeaderLink>
			<HeaderLink href="/blog/misc" class="block">Misc</HeaderLink>
			<HeaderLink href="/about" class="block">About</HeaderLink>
		</div>
	</div>
</header>

<style>
	/* 테마별 아이콘 표시 - BaseHead.astro의 테마 관리와 동기화 */
	:global(body.light-theme) #sunIcon {
		opacity: 1 !important;
	}
	
	:global(body.light-theme) #moonIcon {
		opacity: 0 !important;
	}
	
	:global(body.dark-theme) #sunIcon {
		opacity: 0 !important;
	}
	
	:global(body.dark-theme) #moonIcon {
		opacity: 1 !important;
	}
	
	/* data-theme 속성 기반 아이콘 표시 (fallback) */
	#themeToggleBtn[data-theme="light"] #sunIcon {
		opacity: 1 !important;
	}
	
	#themeToggleBtn[data-theme="light"] #moonIcon {
		opacity: 0 !important;
	}
	
	#themeToggleBtn[data-theme="dark"] #sunIcon {
		opacity: 0 !important;
	}
	
	#themeToggleBtn[data-theme="dark"] #moonIcon {
		opacity: 1 !important;
	}
</style>

<script>
	// 모바일 메뉴 토글 및 테마 버튼 초기화
	document.addEventListener('DOMContentLoaded', function() {
		// 모바일 메뉴 토글
		const mobileMenuBtn = document.getElementById('mobileMenuBtn');
		const mobileMenu = document.getElementById('mobileMenu');
		
		if (mobileMenuBtn && mobileMenu) {
			mobileMenuBtn.addEventListener('click', function() {
				mobileMenu.classList.toggle('hidden');
			});
		}
		
		// 테마 버튼 초기 상태 설정 (BaseHead.astro와 동기화)
		const themeBtn = document.getElementById('themeToggleBtn');
		if (themeBtn) {
			// BaseHead.astro에서 이미 이벤트 리스너가 등록되므로 여기서는 초기 상태만 확인
			const savedTheme = sessionStorage.getItem('neural-blog-theme');
			const isDark = savedTheme ? savedTheme === 'dark' : true;
			themeBtn.setAttribute('data-theme', isDark ? 'dark' : 'light');
		}
	});
</script>