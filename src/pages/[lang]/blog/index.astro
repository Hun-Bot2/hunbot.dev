---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../../components/FormattedDate.astro';
import { useTranslations } from '../../../i18n/ui';

export function getStaticPaths() {
  const langs = ['ko', 'jp', 'en'];
  return langs.map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as 'ko' | 'jp' | 'en');

// 최신 포스트 가져오기 (최신순)
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead title={t('nav.blog')} description={t('blog.all-posts')} />
	</head>
	<body>
		<Header />
		<main class="max-w-4xl mx-auto px-6 py-8">
			<h1 class="text-3xl font-bold mb-8">{t('blog.all-posts')}</h1>
			<div class="space-y-8">
				{posts.map((post) => (
					<article class="border-b border-slate-700 pb-8">
						<header>
							<h2 class="text-2xl font-semibold mb-2">
								<a 
									href={`/${lang}/blog/${post.id}/`}
									class="text-slate-100 hover:text-orange-500 transition-colors"
								>
									{post.data.title}
								</a>
							</h2>
							<div class="text-sm text-slate-400 mb-3">
								<FormattedDate date={post.data.pubDate} />
							</div>
						</header>
						{post.data.description && (
							<p class="text-slate-300 leading-relaxed">
								{post.data.description}
							</p>
						)}
					</article>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
