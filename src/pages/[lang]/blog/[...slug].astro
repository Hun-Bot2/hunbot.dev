---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../../layouts/BlogPost.astro';
import { render } from 'astro:content';

export async function getStaticPaths() {
	const langs = ['ko', 'jp', 'en'];
	const posts = await getCollection('blog');

	const slugMap = new Map<string, string[]>();

	for (const post of posts) {
		const [lang, ...rest] = post.id.split('/');
		if (!lang || !langs.includes(lang)) continue;
		const slug = rest.join('/');
		if (!slugMap.has(slug)) {
			slugMap.set(slug, []);
		}
		slugMap.get(slug)!.push(lang);
	}
	
	return langs.flatMap(lang => {
		// Filter posts for the current language
		const langPosts = posts.filter(post => post.id.startsWith(`${lang}/`));
		
		return langPosts.map((post) => {
			// Remove language prefix from slug
			const slug = post.id.replace(`${lang}/`, '');
			return {
				params: { lang, slug },
				props: { post, lang, availableLangs: slugMap.get(slug) ?? [lang] },
			};
		});
	});
}

type Props = {
	post: CollectionEntry<'blog'>;
	lang: string;
	availableLangs: string[];
};

const { post, lang, availableLangs } = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data} lang={lang} availableLangs={availableLangs}>
	<Content />
</BlogPost>
