---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../../layouts/BlogPost.astro';
import { render } from 'astro:content';

export async function getStaticPaths() {
	const langs = ['ko', 'jp', 'en'];
	const posts = await getCollection('blog');
	
	return langs.flatMap(lang => {
		// Filter posts for the current language
		const langPosts = posts.filter(post => post.id.startsWith(`${lang}/`));
		
		return langPosts.map((post) => {
			// Remove language prefix from slug
			const slug = post.id.replace(`${lang}/`, '');
			return {
				params: { lang, slug },
				props: { post, lang },
			};
		});
	});
}

type Props = {
	post: CollectionEntry<'blog'>;
	lang: string;
};

const { post, lang } = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data} lang={lang}>
	<Content />
</BlogPost>
